{
  "lerna": "2.11.0",
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "bootstrap": {
      "concurrency": 1,
      "npmClientArgs": ["--no-package-lock"]
    },
    "clean": {
      "yes": true
    },
    "version": {
      "allowBranch": ["master", "develop"]
    },
    "publish": {
      "loglevel": "verbose",
      "message": "chore(release): publish packages",
      "yes": true
    }
  }
}
