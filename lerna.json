{
  "lerna": "4.0.0",
  "version": "6.0.0",
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "concurrency": 1,
      "npmClientArgs": [
        "--no-save"
      ]
    },
    "clean": {
      "yes": true
    },
    "version": {
      "allowBranch": [
        "master",
        "develop",
        "v5-dev"
      ],
      "conventionalCommits": true
    },
    "publish": {
      "concurrency": 1,
      "loglevel": "silly",
      "message": "chore(release): %s",
      "verifyAccess": false,
      "yes": true
    }
  }
}
