{
  "lerna": "4.0.0",
  "version": "4.40.0",
  "packages": [
    "packages/*"
  ],
  "command": {
    "bootstrap": {
      "concurrency": 1,
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "clean": {
      "yes": true
    },
    "version": {
      "allowBranch": [
        "master",
        "develop"
      ]
    },
    "publish": {
      "loglevel": "verbose",
      "message": "chore(release): %s",
      "yes": true
    }
  }
}
