{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "12.2.1",
  "packages": [
    "packages/html",
    "packages/core",
    "packages/default",
    "packages/bootstrap",
    "packages/classic",
    "packages/material",
    "packages/fluent",
    "packages/utils"
  ],
  "command": {
    "clean": {
      "yes": true
    },
    "version": {
      "allowBranch": [
        "master",
        "develop",
        "v5-dev"
      ],
      "conventionalCommits": true
    },
    "publish": {
      "concurrency": 1,
      "loglevel": "silly",
      "message": "chore(release): %s",
      "verifyAccess": false,
      "yes": true
    }
  }
}