{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "version": "7.2.2-dev.0",
  "packages": [
    "packages/*"
  ],
  "command": {
    "clean": {
      "yes": true
    },
    "version": {
      "allowBranch": [
        "master",
        "develop",
        "v5-dev"
      ],
      "conventionalCommits": true
    },
    "publish": {
      "concurrency": 1,
      "loglevel": "silly",
      "message": "chore(release): %s",
      "verifyAccess": false,
      "yes": true
    }
  }
}
