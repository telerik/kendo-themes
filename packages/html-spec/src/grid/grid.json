                            "children": [
                                {
                                    "name": "grid-footer-table-row",
                                    "selector": [
                                        ".k-table-row"
                                    ],
                                    "children": [
                                        {
                                            "name": "grid-footer-table-cell",
                                            "selector": [
                                                "td",
                                                ".k-table-td"
                                            ],
                                            "states": [
                                                {
                                                    "name": "sticky",
                                                    "selector": [
                                                        ".k-grid-footer-sticky"
                                                    ]
                                                }
                                            ]
                                        }
                                    ]
                                }
                            ]
                        }
                    ]
                }
