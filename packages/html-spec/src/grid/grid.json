
{
    "$schema": "../../schemas/component.schema.json",
    "title": "Kendo Grid HTML Spec",
    "component": "grid",
    "selector": [
        ".k-grid"
    ],
    "options": [
        {
            "name": "size",
            "values": [
                {
                    "name": "small",
                    "selector": [
                        ".k-grid-sm"
                    ]
                },
                {
                    "name": "medium",
                    "selector": [
                        ".k-grid-md"
                    ]
                }
            ]
        }
    ],
    "children": [
        {
            "name": "grid-toolbar",
            "$ref": "toolbar",
            "selector": [
                ".k-grid-toolbar"
            ],
            "options": [
                {
                    "name": "size",
                    "value": "{parent.size}"
                }
            ]
        },
        {
            "name": "grid-grouping-header",
            "selector": [
                ".k-grouping-header",
                ".k-grid-grouping-header"
            ],
            "children": [
                {
                    "name": "grid-grouping-indicator",
                    "$ref": "chip-list",
                    "selector": [
                        ".k-chip-list"
                    ],
                    "options": [
                        {
                            "name": "size",
                            "value": "{parent.size}"
                        }
                    ]
                }
            ]
        },
        {
            "name": "grid-header",
            "selector": [
                ".k-grid-header"
            ],
            "children": [
                {
                    "name": "grid-header-wrap",
                    "selector": [
                        ".k-grid-header-wrap"
                    ]
                },
                {
                    "name": "grid-header-table",
                    "$ref": "data-table-header-table",
                    "selector": [
                        ".k-table",
                        ".k-grid-header-table"
                    ],
                    "options": [
                        {
                            "name": "size",
                            "value": "{parent.size}"
                        }
                    ],
                    "children": [
                        {
                            "name": "grid-header-row",
                            "selector": [
                                ".k-table-row"
                            ],
                            "states": [
                                {
                                    "name": "filter",
                                    "selector": [
                                        ".k-filter-row"
                                    ]
                                }
                            ]
                        },
                        {
                            "name": "grid-header-cell",
                            "selector": [
                                ".k-header",
                                ".k-table-th"
                            ],
                            "states": [
                                {
                                    "name": "focus",
                                    "selector": [
                                        ":focus",
                                        ".k-focus"
                                    ]
                                },
                                {
                                    "name": "sorted",
                                    "selector": [
                                        ".k-sorted"
                                    ]
                                },
                                {
                                    "name": "filterable",
                                    "selector": [
                                        ".k-filterable"
                                    ]
                                },
                                {
