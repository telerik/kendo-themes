                        {
                            "name": "grid-table-cell",
                            "selector": [
                                "td",
                                ".k-table-td"
                            ],
                            "states": [
                                {
                                    "name": "hover",
                                    "selector": [
                                        ":hover",
                                        ".k-hover"
                                    ]
                                },
                                {
                                    "name": "focus",
                                    "selector": [
                                        ":focus",
                                        ".k-focus"
                                    ]
                                },
                                {
                                    "name": "selected",
                                    "selector": [
                                        ".k-selected"
                                    ]
                                },
                                {
                                    "name": "sorted",
                                    "selector": [
                                        ".k-sorted"
                                    ]
                                },
                                {
                                    "name": "locked",
                                    "selector": [
                                        ".k-locked"
                                    ]
                                },
                                {
                                    "name": "sticky",
                                    "selector": [
                                        ".k-grid-content-sticky"
                                    ]
                                },
                                {
                                    "name": "edit",
                                    "selector": [
                                        ".k-grid-edit-cell"
                                    ]
                                },
                                {
                                    "name": "command",
                                    "selector": [
                                        ".k-command-cell"
                                    ]
                                },
                                {
                                    "name": "grouping",
                                    "selector": [
                                        ".k-table-group-td",
                                        ".k-group-cell"
                                    ]
                                },
                                {
                                    "name": "hierarchy",
                                    "selector": [
                                        ".k-hierarchy-cell"
                                    ]
                                },
                                {
                                    "name": "detail",
                                    "selector": [
                                        ".k-detail-cell"
                                    ]
                                }
                            ],
                            "children": [
                                {
                                    "name": "grid-command-button",
                                    "$ref": "button",
                                    "selector": [
                                        ".k-command-cell .k-button"
                                    ]
                                }
                            ]
                        },
                        {
                            "name": "grid-textbox",
                            "$ref": "textbox",
                            "selector": [
                                ".k-textbox"
                            ]
                        },
                        {
                            "name": "grid-numerictextbox",
                            "$ref": "numerictextbox",
                            "selector": [
                                ".k-numerictextbox"
                            ]
                        },
                        {
                            "name": "grid-checkbox",
                            "$ref": "checkbox",
                            "selector": [
                                ".k-checkbox"
                            ]
                        },
                        {
                            "name": "grid-datepicker",
                            "$ref": "datepicker",
                            "selector": [
                                ".k-datepicker"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "grid-pager",
            "$ref": "pager",
            "selector": [
                ".k-grid-pager"
