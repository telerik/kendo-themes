            "name": "grid-content",
            "selector": [
                ".k-grid-content"
            ],
            "children": [
                {
                    "name": "grid-table",
                    "$ref": "data-table-scroller-table",
                    "selector": [
                        ".k-table",
                        ".k-grid-table"
                    ],
                    "options": [
                        {
                            "name": "size",
                            "value": "{parent.size}"
                        }
                    ],
                    "children": [
                        {
                            "name": "grid-col",
                            "selector": [
                                "col"
                            ],
                            "states": [
                                {
                                    "name": "sorted",
                                    "selector": [
                                        ".k-sorted"
                                    ]
                                }
                            ]
                        },
                        {
                            "name": "grid-table-row",
                            "selector": [
                                ".k-table-row",
                                ".k-master-row"
                            ],
                            "states": [
                                {
                                    "name": "hover",
                                    "selector": [
                                        ":hover",
                                        ".k-hover"
                                    ]
                                },
                                {
                                    "name": "focus",
                                    "selector": [
                                        ":focus",
                                        ".k-focus"
                                    ]
                                },
                                {
                                    "name": "selected",
                                    "selector": [
                                        ".k-selected"
                                    ]
                                },
                                {
                                    "name": "alt",
                                    "selector": [
                                        ".k-alt",
                                        ".k-table-alt-row"
