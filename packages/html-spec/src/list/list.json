{
    "$schema": "../../schemas/component.schema.json",
    "title": "Kendo List HTML Spec",
    "component": "list",
    "selector": [
        ".k-list"
    ],
    "options": [
        {
            "name": "size",
            "values": [
                {
                    "name": "small",
                    "selector": [
                        ".k-list-sm"
                    ]
                },
                {
                    "name": "medium",
                    "selector": [
                        ".k-list-md"
                    ]
                },
                {
                    "name": "large",
                    "selector": [
                        ".k-list-lg"
                    ]
                }
            ]
        }
    ],
    "children": [
        {
            "name": "list-item",
            "$ref": "list-item",
            "selector": [
                ".k-list-item"
            ]
        }
    ]
}
