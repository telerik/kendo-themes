{
    "$schema": "../../schemas/component.schema.json",
    "title": "Kendo Notification HTML Spec",
    "component": "notification",
    "selector": [
        ".k-notification"
    ],
    "options": [
        {
            "name": "themeColor",
            "values": [
                {
                    "name": "primary",
                    "selector": [
                        ".k-notification-primary"
                    ]
                },
                {
                    "name": "secondary",
                    "selector": [
                        ".k-notification-secondary"
                    ]
                },
                {
                    "name": "tertiary",
                    "selector": [
                        ".k-notification-tertiary"
                    ]
                },
                {
                    "name": "info",
                    "selector": [
                        ".k-notification-info"
                    ]
                },
                {
                    "name": "success",
                    "selector": [
                        ".k-notification-success"
                    ]
                },
                {
                    "name": "warning",
                    "selector": [
                        ".k-notification-warning"
                    ]
                },
                {
                    "name": "error",
                    "selector": [
                        ".k-notification-error"
                    ]
                },
                {
                    "name": "dark",
                    "selector": [
                        ".k-notification-dark"
                    ]
                },
                {
                    "name": "light",
                    "selector": [
                        ".k-notification-light"
                    ]
                },
                {
                    "name": "inverse",
                    "selector": [
                        ".k-notification-inverse"
                    ]
                }
            ]
        }
    ],
    "children": [
        {
            "name": "notification-status-icon",
            "$ref": "icon",
            "selector": [
                ".k-notification-status"
            ]
        },
        {
            "name": "notification-content",
            "selector": [
                ".k-notification-content"
            ]
        },
        {
            "name": "notification-action",
            "$ref": "icon",
            "selector": [
                ".k-notification-action"
            ]
        }
    ]
}
