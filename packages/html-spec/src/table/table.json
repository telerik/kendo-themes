{
    "$schema": "../../schemas/component.schema.json",
    "title": "Kendo Table HTML Spec",
    "component": "table",
    "selector": [
        ".k-table"
    ],
    "options": [
        {
            "name": "size",
            "values": [
                {
                    "name": "small",
                    "selector": [
                        ".k-table-sm"
                    ]
                },
                {
                    "name": "medium",
                    "selector": [
                        ".k-table-md"
                    ]
                },
                {
                    "name": "large",
                    "selector": [
                        ".k-table-lg"
                    ]
                }
            ]
        }
    ],
    "children": [
        {
            "name": "table-head",
            "selector": [
                ".k-table-thead"
            ],
            "children": [
                {
                    "name": "table-header-row",
                    "selector": [
                        ".k-table-row"
                    ],
                    "children": [
                        {
                            "name": "table-header-cell",
                            "selector": [
                                ".k-table-th"
                            ],
                            "states": [
                                {
                                    "name": "focus",
                                    "selector": [
                                        ":focus",
                                        ".k-focus"
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "table-body",
            "selector": [
                ".k-table-tbody"
            ],
            "children": [
                {
                    "name": "table-body-row",
                    "selector": [
                        ".k-table-row"
                    ],
                    "states": [
                        {
                            "name": "hover",
                            "selector": [
                                ":hover",
                                ".k-hover"
                            ]
                        },
                        {
                            "name": "focus",
                            "selector": [
                                ":focus",
                                ".k-focus"
                            ]
                        },
                        {
                            "name": "selected",
                            "selector": [
                                ".k-selected"
                            ]
                        },
                        {
                            "name": "alt",
                            "selector": [
                                ".k-table-alt-row"
                            ]
                        }
                    ],
                    "children": [
                        {
                            "name": "table-body-cell",
                            "selector": [
                                ".k-table-td"
                            ],
                            "states": [
                                {
                                    "name": "hover",
                                    "selector": [
                                        ":hover",
                                        ".k-hover"
                                    ]
                                },
                                {
                                    "name": "focus",
                                    "selector": [
                                        ":focus",
                                        ".k-focus"
                                    ]
                                },
                                {
                                    "name": "selected",
                                    "selector": [
                                        ".k-selected"
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "table-group-row",
                    "selector": [
                        ".k-table-group-row"
                    ],
                    "children": [
                        {
                            "name": "table-group-cell",
                            "selector": [
                                ".k-table-th"
                            ]
                        }
                    ]
                }
            ]
        },
        {
            "name": "table-footer",
            "selector": [
                ".k-table-tfoot"
            ],
            "children": [
                {
                    "name": "table-footer-row",
                    "selector": [
                        ".k-table-row"
                    ],
                    "children": [
                        {
                            "name": "table-footer-cell",
                            "selector": [
                                ".k-table-td"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
