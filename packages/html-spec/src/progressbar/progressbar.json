{
    "$schema": "../../schemas/component.schema.json",
    "title": "Kendo Progressbar HTML Spec",
    "component": "progressbar",
    "selector": [
        ".k-progressbar"
    ],
    "states": [
        {
            "name": "indeterminate",
            "selector": [
                ".k-progressbar-indeterminate"
            ]
        },
        {
            "name": "disabled",
            "selector": [
                ":disabled",
                "[disabled]",
                ".k-disabled"
            ]
        }
    ],
    "options": [
       {
            "name": "orientation",
            "values": [
                {
                    "name": "horizontal",
                    "selector": [
                        ".k-progressbar-horizontal"
                    ]
                },
                {
                    "name": "vertical",
                    "selector": [
                        ".k-progressbar-vertical"
                    ]
                },
                {
                    "name": "reverse",
                    "selector": [
                        ".k-progressbar-reverse"
                    ]
                }
            ]
       }
    ],
    "children": [
        {
            "name": "progressbar-value",
            "selector": [
                ".k-progressbar-value.k-selected"
            ]
        }
    ]
}
