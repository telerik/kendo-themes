{
    "$schema": "../../schemas/component.schema.json",
    "title": "Kendo Dialog HTML Spec",
    "component": "dialog",
    "selector": [
        ".k-dialog"
    ],
    "children": [
        {
            "name": "dialog-titlebar",
            "selector": [
                ".k-dialog-titlebar"
            ]
        },
        {
            "name": "dialog-title",
            "selector": [
                ".k-dialog-title"
            ]
        },
        {
            "name": "dialog-actions",
            "selector": [
                ".k-dialog-titlebar-actions"
            ]
        },
        {
            "name": "dialog-action",
            "$ref": "button",
            "selector": [
                ".k-dialog-action"
            ],
            "options": [
                {
                    "name": "fillMode",
                    "value": "flat"
                }
            ]
        },
        {
            "name": "dialog-content",
            "selector": [
                ".k-dialog-content"
            ]
        },
        {
            "name": "dialog-buttons",
            "$ref": "action-buttons",
            "selector": [
                ".k-dialog-actions"
            ],
            "options": [
                {
                    "name": "alignment",
                    "value": "end"
                }
            ]
        }
    ]
}
