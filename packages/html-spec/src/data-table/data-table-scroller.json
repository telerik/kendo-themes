
{
    "$schema": "../../schemas/component.schema.json",
    "title": "Kendo Data Table Scroller HTML Spec",
    "component": "data-table-scroller-table",
    "selector": [
        ".k-table"
    ],
    "options": [
        {
            "name": "size",
            "values": [
                {
                    "name": "small",
                    "selector": [
                        ".k-table-sm"
                    ]
                },
                {
                    "name": "medium",
                    "selector": [
                        ".k-table-md"
                    ]
                },
                {
                    "name": "large",
                    "selector": [
                        ".k-table-lg"
                    ]
                }
            ]
        }
    ],
    "children": [
        {
            "name": "data-table-scroller-table-body",
            "selector": [
                ".k-table-tbody"
            ],
            "children": [
                {
                    "name": "data-table-scroller-table-row",
                    "selector": [
                        ".k-table-row"
                    ],
                    "states": [
                        {
                            "name": "hover",
                            "selector": [
                                ":hover",
                                ".k-hover"
                            ]
                        },
                        {
                            "name": "focus",
                            "selector": [
                                ":focus",
                                ".k-focus"
                            ]
                        },
                        {
                            "name": "selected",
                            "selector": [
                                ".k-selected"
                            ]
                        },
                        {
                            "name": "alt",
                            "selector": [
                                ".k-table-alt-row"
                            ]
                        }
                    ],
                    "children": [
                        {
                            "name": "data-table-scroller-table-cell",
                            "selector": [
                                ".k-table-td"
                            ],
                            "states": [
                                {
                                    "name": "hover",
                                    "selector": [
                                        ":hover",
                                        ".k-hover"
                                    ]
                                },
                                {
                                    "name": "focus",
                                    "selector": [
                                        ":focus",
                                        ".k-focus"
                                    ]
                                },
                                {
                                    "name": "selected",
                                    "selector": [
                                        ".k-selected"
                                    ]
                                }
                            ]
                        }
                    ]
                },
                {
                    "name": "data-table-scroller-table-group-row",
                    "selector": [
                        ".k-table-group-row"
                    ],
                    "children": [
                        {
                            "name": "data-table-scroller-table-group-cell",
                            "selector": [
                                ".k-table-th"
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}
