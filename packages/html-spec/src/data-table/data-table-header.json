
{
    "$schema": "../../schemas/component.schema.json",
    "title": "Kendo Data Table Header HTML Spec",
    "component": "data-table-header-table",
    "selector": [
        ".k-table"
    ],
    "options": [
        {
            "name": "size",
            "values": [
                {
                    "name": "small",
                    "selector": [
                        ".k-table-sm"
                    ]
                },
                {
                    "name": "medium",
                    "selector": [
                        ".k-table-md"
                    ]
                },
                {
                    "name": "large",
                    "selector": [
                        ".k-table-lg"
                    ]
                }
            ]
        }
    ],
    "children": [
        {
            "name": "data-table-header-table-head",
            "selector": [
                ".k-table-thead"
            ],
            "children": [
                {
                    "name": "data-table-header-table-row",
                    "selector": [
                        ".k-table-row"
                    ],
                    "children": [
                        {
                            "name": "data-table-header-table-cell",
                            "selector": [
                                ".k-table-th"
                            ],
                            "states": [
                                {
                                    "name": "focus",
                                    "selector": [
                                        ":focus",
                                        ".k-focus"
                                    ]
                                }
                            ]
                        }
                    ]
                }
            ]
        }
    ]
}

