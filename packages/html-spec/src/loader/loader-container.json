{
    "$schema": "../../schemas/component.schema.json",
    "title": "Kendo Loader Container HTML Spec",
    "component": "loader-container",
    "selector": [
        ".k-loader-container"
    ],
    "options": [
        {
            "name": "size",
            "values": [
                {
                    "name": "small",
                    "selector": [
                        ".k-loader-container-sm"
                    ]
                },
                {
                    "name": "medium",
                    "selector": [
                        ".k-loader-container-md"
                    ]
                },
                {
                    "name": "large",
                    "selector": [
                        ".k-loader-container-lg"
                    ]
                }
            ]
        },
        {
            "name": "position",
            "values": [
                {
                    "name": "top",
                    "selector": [
                        ".k-loader-top"
                    ]
                },
                {
                    "name": "end",
                    "selector": [
                        ".k-loader-end"
                    ]
                },
                {
                    "name": "start",
                    "selector": [
                        ".k-loader-start"
                    ]
                }
            ]
        },
        {
            "name": "overlay",
            "values": [
                {
                    "name": "light"
                },
                {
                    "name": "dark"
                }
            ]
        }
    ],
    "children": [
        {
            "name": "loader-container-overlay",
            "selector": [
                ".k-loader-container-overlay.k-overlay-{parent.overlay}"
            ]
        },
        {
            "name": "loader-container-inner",
            "selector": [
                ".k-loader-container-inner"
            ],
            "children": [
                {
                    "name": "loader",
                    "$ref": "loader",
                    "selector": [
                        ".k-loader"
                    ],
                    "options": [
                        {
                            "name": "size",
                            "value": "{parent.size}"
                        },
                        {
                            "name": "themeColor",
                            "value": "{parent.themeColor}"
                        },
                        {
                            "name": "animation",
                            "value": "{parent.loaderType}"
                        }
                    ]
                },
                {
                    "name": "loader-container-label",
                    "selector": [
                        ".k-loader-container-label.\\!k-text-{parent.themeColor}"
                    ]
                }
            ]
        }
    ]
}
