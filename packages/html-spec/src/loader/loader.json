                    "selector": [
                        ".k-loader-md"
                    ]
                },
                {
                    "name": "large",
                    "selector": [
                        ".k-loader-lg"
                    ]
                }
            ]
        },
        {
            "name": "themeColor",
            "values": [
                {
                    "name": "primary",
                    "selector": [
                        ".k-loader-primary"
                    ]
                },
                {
                    "name": "secondary",
                    "selector": [
                        ".k-loader-secondary"
                    ]
                },
                {
                    "name": "tertiary",
                    "selector": [
                        ".k-loader-tertiary"
                    ]
                },
                {
                    "name": "info",
                    "selector": [
                        ".k-loader-info"
                    ]
                },
                {
                    "name": "success",
                    "selector": [
                        ".k-loader-success"
                    ]
                },
                {
                    "name": "warning",
                    "selector": [
                        ".k-loader-warning"
                    ]
                },
                {
                    "name": "error",
                    "selector": [
                        ".k-loader-error"
                    ]
                },
                {
                    "name": "dark",
                    "selector": [
                        ".k-loader-dark"
                    ]
