{
  "name": "@progress/kendo-theme-bootstrap",
  "description": "Bootstrap v4 theme for Kendo UI",
  "version": "2.11.5",
  "author": "Progress",
  "license": "Apache-2.0",
  "keywords": [
    "Kendo UI",
    "Bootstrap",
    "Theme"
  ],
  "main": "dist/all.css",
  "sass": "scss/all.scss",
  "repository": {
    "type": "git",
    "url": "https://github.com/telerik/kendo-theme-bootstrap.git"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "lint": "sass-lint -v -c ./sass-lint.yml",
    "api": "sassdoc ./scss/",
    "api-check": "npm run api && git diff --exit-code --quiet -- docs/ || (echo -e '\\033[0;31mERROR: API docs are out of date' && exit 1)",
    "start": "webpack-dev-server --hot --inline",
    "build": "webpack --optimize-minimize --bail",
    "watch": "webpack --watch",
    "test": "npm run lint && npm run build && npm run api-check",
    "prepublish": "bash ./build/embed-dependencies 'bootstrap' '@progress/kendo-theme-default' && npm run build",
    "postpublish": "rm -rf modules && git checkout scss"
  },
  "peerDependencies": {
    "bootstrap": "4.0.0"
  },
  "dependencies": {
    "@progress/kendo-theme-default": "^2.47.7"
  },
  "devDependencies": {
    "bootstrap": "4.0.0",
    "glob": "^7.0.5",
    "mime": "^1.3.4",
    "sass-lint": "^1.7.0",
    "sassdoc": "^2.1.20",
    "webpack": "^1.13.1"
  }
}
