{
    "compilerOptions": {
        "target": "esnext",
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "isolatedModules": true,
        "esModuleInterop": true,
        "emitDeclarationOnly": true,
        "declaration": true,
        "strictFunctionTypes": true,
        "noImplicitAny": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "strictNullChecks": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}
