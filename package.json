{
  "version": "0.0.0",
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@commitlint/core": "^17.0.0",
    "@progress/kendo-e2e": "^0.10.1",
    "@progress/kendo-font-icons": "0.1.2",
    "@progress/kendo-theme-tasks": "^1.15.2",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "autoprefixer": "^10.4.7",
    "chai": "^4.3.6",
    "dss": "^1.0.4",
    "eslint": "^8.17.0",
    "eslint-plugin-react": "^7.30.0",
    "fs-extra": "^10.1.0",
    "glob": "^8.0.3",
    "gulp": "^4.0.2",
    "html-validate": "^7.1.1",
    "http-server": "^14.1.1",
    "husky": "^7.0.4",
    "lerna": "^4.0.0",
    "lodash.merge": "^4.6.2",
    "node-sass": "^7.0.1",
    "nunjucks": "^3.2.3",
    "postcss": "^8.4.14",
    "postcss-calc": "^8.2.4",
    "sass": "^1.52.2",
    "sass-embedded": "^1.52.2",
    "sass-lint": "^1.13.1",
    "sassdoc": "^2.7.4",
    "semver": "^7.3.7",
    "stylelint": "^14.8.5",
    "stylelint-config-standard": "^25.0.0",
    "stylelint-scss": "^4.2.0"
  },
  "scripts": {
    "setup": "bash ./scripts/setup.sh",
    "clean": "find . -name \"node_modules\" -type d -prune | grep -e \".git\" -v | xargs rm -rf",
    "clean:dist": "find ./packages -name \"dist\" -type d -prune | grep -e \"node_modules\" -v | xargs rm -rf",
    "clean:tests": "node ./scripts/cleanup-test-results.js",
    "bootstrap": "lerna clean && lerna bootstrap",
    "dist:flat": "gulp dist:flat",
    "dist:swatches": "gulp dist:swatches",
    "sass": "gulp sass",
    "sass:flat": "gulp sass:flat",
    "sass:watch": "gulp sass:watch",
    "sass:swatches": "gulp sass:swatches",
    "sass:standalone": "gulp sass:standalone",
    "dart": "gulp dart",
    "dart:flat": "gulp dart:flat",
    "dart:watch": "gulp dart:watch",
    "dart:swatches": "gulp dart:swatches",
    "build": "npm run sass && npm run build:scripts",
    "build:scripts": "npm run build --prefix packages/html",
    "build:tests": "npm run build:tests --prefix packages/html",
    "watch:tests": "npm run watch:tests --prefix packages/html",
    "serve": "npm run sass && npm run build:scripts && npm run build:tests && npm run serve-tests",
    "eslint": "eslint \"**/*.{js,jsx,ts,tsx}\"",
    "check-types": "npm run check-types --prefix packages/html",
    "sasslint": "sass-lint -v -q ",
    "stylelint": "stylelint \"**/*.scss\"",
    "html-validate": "html-validate tests",
    "lint": "npm run eslint && npm run sasslint",
    "docs": "gulp docs",
    "docs:check": "gulp docs:check",
    "utils-docs": "gulp utils-docs",
    "create-screenshots": "./build/create-screenshots.sh",
    "serve-tests": "http-server ./ -c-1",
    "embed-assets": "gulp assets",
    "create-component": "gulp create-component",
    "update": "npx npm-check-updates --upgrade"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint && npm run sasslint",
      "pre-push": "npm run eslint && npm run sasslint && npm run sass && npm run docs:check",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
