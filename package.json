{
  "name": "kendo-themes.repo",
  "version": "0.0.0",
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@commitlint/core": "^17.0.0",
    "@progress/dss": "^1.0.1",
    "@progress/kendo-e2e": "^1.0.0",
    "@progress/kendo-theme-tasks": "^1.17.5",
    "@types/node": "^18.15.11",
    "@typescript-eslint/eslint-plugin": "^5.27.0",
    "@typescript-eslint/parser": "^5.27.0",
    "chai": "^4.3.6",
    "esbuild": "^0.17.15",
    "eslint": "^8.17.0",
    "eslint-plugin-react": "^7.30.0",
    "glob": "^10.2.2",
    "gulp": "^4.0.2",
    "html-validate": "^7.1.1",
    "http-server": "^14.1.1",
    "husky": "^7.0.4",
    "lerna": "^5.5.2",
    "lint-staged": "^13.0.3",
    "node-sass": "^8.0.0",
    "nunjucks": "^3.2.3",
    "pastshots": "^1.6.2",
    "sass": "^1.54.9",
    "sass-build": "^1.1.5",
    "sass-embedded": "^1.54.9",
    "sass-unused": "^0.5.0",
    "sassdoc": "^2.7.4",
    "semver": "^7.3.7",
    "stylelint": "^15.4.0",
    "stylelint-config-standard": "^33.0.0",
    "stylelint-config-standard-scss": "^9.0.0",
    "stylelint-scss": "^5.0.0",
    "typescript": "^5.0.3"
  },
  "scripts": {
    "setup": "bash ./scripts/setup.sh",
    "clean": "find . -name \"node_modules\" -type d -prune | xargs rm -rf",
    "clean:dist": "find ./packages -name \"dist\" -type d -prune -maxdepth 2 | xargs rm -rf",
    "clean:tests": "node ./scripts/cleanup-test-results.js",
    "bootstrap": "lerna clean && lerna bootstrap",
    "dist:flat": "gulp dist:flat",
    "dist:swatches": "gulp dist:swatches",
    "sass": "sass-build",
    "sass:flat": "npm run dist:flat && sass-build --config sass-flat.config.js",
    "sass:swatches": "npm run dist:swatches && sass-build --config sass-swatches.config.js",
    "sass:standalone": "lerna run sass:standalone",
    "build": "npm run sass && npm run build:scripts",
    "build:scripts": "npm run build --prefix packages/html",
    "build:tests": "npm run build:tests --prefix packages/html",
    "serve": "npm run sass && npm run build:scripts && npm run build:tests && npm run serve-tests",
    "eslint": "eslint \"**/*.{js,jsx,ts,tsx,mjs}\"",
    "check-types": "npm run check-types --prefix packages/html",
    "sasslint": "sass-lint -v -q ",
    "stylelint": "stylelint \"**/*.scss\"",
    "html-validate": "html-validate tests",
    "lint": "npm run eslint && npm run sasslint",
    "lint-staged": "lint-staged --verbose",
    "docs": "lerna run docs",
    "docs:check": "npm run docs && lerna exec -- git diff --exit-code --quiet -- docs/",
    "utils-docs": "gulp utils-docs",
    "render-test-pages": "node ./scripts/render-test-pages.mjs",
    "create-screenshots": "./build/create-screenshots.sh",
    "serve-tests": "http-server ./ -c-1",
    "embed-assets": "gulp assets",
    "create-component": "gulp create-component",
    "update": "npx npm-check-updates --upgrade",
    "test-contrast": "node ./scripts/test-contrast.mjs"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,mjs}": "eslint"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run sasslint && npm run lint-staged",
      "pre-push": "npm run sass && npm run docs:check",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  }
}
