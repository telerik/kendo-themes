{
  "version": "0.0.0",
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@commitlint/core": "^11.0.0",
    "@joneff/baka": "^0.5.1",
    "@progress/kendo-font-icons": "0.1.2",
    "ansi-colors": "^4.1.1",
    "autoprefixer": "^10.0.1",
    "eslint": "^7.7.0",
    "fs-extra": "^8.1.0",
    "glob": "^7.1.6",
    "gulp": "^4.0.2",
    "gulplog": "^1.0.0",
    "http-server": "^0.12.1",
    "husky": "^4.2.5",
    "lerna": "^2.11.0",
    "mime": "^2.4.6",
    "node-sass": "^5.0.0",
    "nunjucks": "^3.2.2",
    "postcss": "^8.0.3",
    "postcss-calc": "^8.0.0",
    "sass": "^1.27.0",
    "sass-lint": "^1.13.1",
    "sass-variable-parser": "^1.2.2",
    "sassdoc": "^2.7.3",
    "sassdoc-extras": "^3.0.0"
  },
  "scripts": {
    "clean": "find . -name \"node_modules\" -type d -prune | grep -e \".git\" -v | xargs rm -rf",
    "clean:dist": "find ./packages -name \"dist\" -type d -prune | grep -e \"node_modules\" -v | xargs rm -rf",
    "bootstrap": "lerna clean && lerna bootstrap",
    "sass": "gulp sass",
    "sass:flat": "gulp sass:flat",
    "sass:watch": "gulp sass:watch",
    "sass:swatches": "gulp sass:swatches",
    "sass:standalone": "gulp sass --file 'scss/!(common|styling)*/_index.scss'  --dry-run",
    "dart": "gulp dart",
    "dart:flat": "gulp dart:flat",
    "dart:watch": "gulp dart:watch",
    "dart:swatches": "gulp dart:swatches",
    "eslint": "eslint \"**/*.js\"",
    "sasslint": "sass-lint -v -q ",
    "lint": "npm run eslint && npm run sasslint",
    "docs": "gulp docs",
    "docs:check": "gulp docs:check",
    "pre-tests": "cd tests && npm ci",
    "visual-tests": "./build/visual-test.sh",
    "create-screenshots": "./build/create-screenshots.sh",
    "karma-watch": "cd tests && npm run karma-watch",
    "karma-single": "cd tests && npm run karma-single",
    "karma-travis": "cd tests && npm run karma-travis",
    "serve-tests": "http-server ./",
    "embed-assets": "gulp assets",
    "cleanup-test-results": "cd tests && npm run cleanup-test-results",
    "create-component-files": "node ./scripts/new-component/create-component-files.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run eslint && npm run sasslint",
      "pre-push": "npm run eslint && npm run sasslint && npm run sass && npm run docs:check",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "dependencies": {}
}
