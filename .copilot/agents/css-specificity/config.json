{
  "name": "css-specificity-agent",
  "version": "1.0.0",
  "description": "Intelligent CSS Specificity Analysis Agent for Kendo UI theme system",
  "type": "analysis-agent",
  "tools": {
    "component-registry-builder": "./component-registry-builder.ts",
    "component-registry": "./component-registry.json"
  },
  "capabilities": [
    "css-analysis",
    "specificity-calculation",
    "intelligent-fixes",
    "scss-modification",
    "component-registry-building"
  ],
  "frameworks": ["kendo-ui", "scss", "css"],
  "instructions": "./instructions.md",
  "usage": {
    "copilot": "@workspace /fix-specificity {COMPONENT} {THEME}",
    "commands": [
      "npx tsx --tsconfig ./tsconfig.json component-registry-builder.ts",
      "npx jest --config ../../units/jest.config.cjs ../../units/{THEME}/{COMPONENT}.test.ts --verbose=false"
    ]
  },
  "configuration": {
    "theme": "default",
    "minSpecificity": 10,
    "maxSpecificity": 40,
    "wrapUtilitiesOnly": true,
    "registryBuilder": {
      "htmlPackagePath": "../../packages/html/src/index.ts",
      "outputFile": "./component-registry.json"
    }
  }
}
