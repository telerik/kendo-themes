{
  "name": "cursor-css-specificity-agent",
  "version": "1.0.0",
  "description": "CSS Specificity Analysis Agent for Cursor - Kendo Themes",
  "type": "module",
  "scripts": {
    "build-registry": "npx tsx --tsconfig agents/css-specificity/tsconfig.json agents/css-specificity/component-registry-builder.ts",
    "test-component": "npx jest --config units/jest.config.mjs units/{THEME}/{COMPONENT}.test.ts --verbose=false",
    "analyze": "npm run build-registry && npm run test-component",
    "fix-specificity": "echo 'Use Cursor AI with .cursor/rules/ files for specificity fixes'"
  },
  "dependencies": {
    "@types/node": "^20.0.0",
    "@types/react": "^18.0.0",
    "react": "^18.0.0",
    "typescript": "^5.0.0",
    "tsx": "^4.0.0",
    "jest": "^29.0.0",
    "@jest/globals": "^29.0.0",
    "sass": "^1.60.0"
  },
  "devDependencies": {
    "@types/jest": "^29.0.0"
  },
  "cursor": {
    "agent": {
      "name": "css-specificity-agent",
      "description": "Intelligent CSS Specificity Analysis Agent for Kendo UI theme system",
      "capabilities": [
        "css-analysis",
        "specificity-calculation", 
        "intelligent-fixes",
        "scss-modification",
        "component-registry-building"
      ],
      "frameworks": ["kendo-ui", "scss", "css"],
      "rulesDirectory": ".cursor/rules/",
      "commands": {
        "build-registry": "npm run build-registry",
        "test-component": "npm run test-component",
        "analyze": "npm run analyze"
      }
    }
  },
  "keywords": [
    "cursor",
    "ai-agent",
    "css-specificity",
    "kendo-ui",
    "scss",
    "theme-system"
  ],
  "author": "Kendo Themes Team",
  "license": "MIT"
}
